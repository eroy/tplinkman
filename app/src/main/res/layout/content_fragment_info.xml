<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/build_info_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:paddingTop="20dp"
        android:paddingStart="20dp">

        <ImageView
            android:id="@+id/build_icon"
            android:src="@drawable/ic_build_black_24dp"
            android:layout_alignParentStart="true"
            android:layout_width="@dimen/info_icon_size"
            android:layout_height="@dimen/info_icon_size" />
        <TextView
            android:id="@+id/build_title"
            android:layout_toEndOf="@id/build_icon"
            android:layout_marginStart="32dp"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:text="@string/info_build"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/info_build"
            android:layout_below="@id/build_title"
            android:layout_alignStart="@id/build_title"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_marginTop="20dp"
            android:layout_alignStart="@id/build_title"
            android:layout_below="@id/info_build"
            style="@style/Line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/version_info_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:paddingTop="20dp"
        android:paddingStart="20dp">

        <ImageView
            android:id="@+id/email_icon"
            android:src="@drawable/ic_info_outline_black_24dp"
            android:layout_alignParentStart="true"
            android:layout_width="@dimen/info_icon_size"
            android:layout_height="@dimen/info_icon_size" />
        <TextView
            android:id="@+id/version_title"
            android:layout_toEndOf="@id/email_icon"
            android:layout_marginStart="32dp"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:text="@string/info_version"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/version_build"
            android:layout_below="@id/version_title"
            android:layout_alignStart="@id/version_title"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_marginTop="20dp"
            android:layout_alignStart="@id/version_title"
            android:layout_below="@id/version_build"
            style="@style/Line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height" />
    </RelativeLayout>

</LinearLayout>